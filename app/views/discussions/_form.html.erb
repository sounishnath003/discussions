
<%= simple_form_for(@discussion) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
  </div>

    <div class="form-inputs">
    <%= f.input :content, input_html: {id: "content", class: "textarea is-warning"}, wrapper: false, label_html: { class: "label"} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "button is-danger mt-5" %>
  </div>
<% end %>


<script>

$('#content').frolaEditor();

</script>